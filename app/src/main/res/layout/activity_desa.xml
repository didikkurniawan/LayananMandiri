<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/putih"
    android:orientation="vertical"
    tools:context=".desa">

    <LinearLayout
        android:id="@+id/login2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="159dp"
            android:layout_gravity="center"
            android:src="@drawable/logodiskominfo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Layanan Mandiri"
            android:textColor="@color/hitam"
            android:textSize="23dp"
            android:textStyle="bold" />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/login2"
        android:id="@+id/desamasuk2">
    <EditText
        android:id="@+id/editTextdesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/te_bg" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editTextdesa"
        android:layout_alignStart="@+id/editTextdesa"
        android:layout_below="@+id/editTextdesa"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/desamasuk2">
        <Button
            android:id="@+id/piih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih"/>
    </LinearLayout>
</RelativeLayout>